.container
  .menu_item
    %li
      %h4=menu_item[:name]
      %p=menu_item[:description]
      %b $
      %b=menu_item[:price]
      .formset
        %p Admin options:
        %button.btn.btn-default{form: "edit_menu_form_#{menu_item[:id]}", type: "submit", style: "inline"} edit
        %button.btn.btn-default{form: "delete_menu_form_#{menu_item[:id]}", type: "submit", style: "inline"} delete
        %form{action: "/edit/#{menu_item[:id]}", id: "edit_menu_form_#{menu_item[:id]}", method: "GET", style: "display:none"}
          %input{type: "submit", value: "edit"}
        %form{action: "/delete/#{menu_item[:id]}", id: "delete_menu_form_#{menu_item[:id]}", method: "GET", style: "display:none"}
          %input{name: "_method", type: "hidden", value: "DELETE"}
